{
	"compilerOptions": {
		"lib": ["DOM", "ES2022"],
		"module": "ESNext",
		"target": "ES2020",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,

		"paths": {
			"@shared/*": ["./src/shared/*"]
		}
	},

	"include": ["src"]
}
