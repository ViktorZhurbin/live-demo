{
  "name": "forms",
  "type": "module",
  "license": "MIT",
  "workspaces": ["apps/*", "website"],
  "scripts": {
    "build:web": "pnpm --filter website build",
    "build:lib": "pnpm --filter rspress-plugin-live-demo build",
    "build": "pnpm run build:lib && pnpm build:web",
    "format": "biome check --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["webpack"]
    }
  }
}
