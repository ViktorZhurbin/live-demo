{
  "name": "forms",
  "type": "module",
  "license": "MIT",
  "workspaces": ["packages/*", "website"],
  "scripts": {
    "build:web": "pnpm --filter website build",
    "build:core": "pnpm --filter @live-demo/core build",
    "build:rspress": "pnpm --filter @live-demo/plugin-rspress build",
    "build": "pnpm build:core && pnpm build:rspress && pnpm build:web",
    "format": "biome check --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.1.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["webpack"]
    }
  }
}
