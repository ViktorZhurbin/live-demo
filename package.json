{
	"name": "live-demo-monorepo",
	"private": true,
	"workspaces": [
		"packages/*",
		"website"
	],
	"scripts": {
		"prepublish": "pnpm build:lib",
		"publish": "pnpm --filter '@live-demo/*' publish",
		"publish:prerelease": "pnpm --filter '@live-demo/*' publish --tag prerelease",
		"build:web": "pnpm build:lib && pnpm --filter website build",
		"build:lib": "pnpm --filter '@live-demo/*' build",
		"format": "biome check --write",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"husky": "^9.1.7"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"webpack"
			]
		},
		"onlyBuiltDependencies": [
			"@swc/core"
		]
	}
}
